<section class="auth-form">
  <div class="auth-form__container">
    <h1> Login in to Continue </h1>

    <form method="POST" action="/users/login-user" class="auth-form__form">
      <div class="auth-form__input">
        <label for="username">Username</label>
        <input name="username" id="username" type="text" class="auth-form__username">
      </div>

      <div class="auth-form__input">
        <label for="password">Password</label>
        <input name="password" id="password" type="text" class="auth-form__password">
      </div>

      <span> Don't have an account? <a href="/users/sign-up">Click me!</a></span>

      <button type="submit" class="auth-form__button">Login</button>
    </form>
  </div>
</section>
